import "./struct.cartesian.llang";

polydoctrine Bool extends StructCartesian where {
  type Bool @M;

  gen T : [] -> [Bool] @M;
  gen F : [] -> [Bool] @M;
  gen if : [Bool, Bool, Bool] -> [Bool] @M;

  rule computational ifT -> : [Bool, Bool] -> [Bool] @M =
    (T * id[Bool] * id[Bool]) ; if == id[Bool] * drop

  rule computational ifF -> : [Bool, Bool] -> [Bool] @M =
    (F * id[Bool] * id[Bool]) ; if == drop * id[Bool]
}
