import "../stdlib/struct.cartesian.llang";

doctrine CartMonoid extends StructCartesian where {
  type A @M;

  gen unit : [] -> [A] @M;
  gen mul : [A, A] -> [A] @M;

  rule computational assoc -> : [A, A, A] -> [A] @M =
    (mul * id[A]) ; mul == (id[A] * mul) ; mul

  rule computational unitL -> : [A] -> [A] @M =
    (unit * id[A]) ; mul == id[A]

  rule computational unitR -> : [A] -> [A] @M =
    (id[A] * unit) ; mul == id[A]
}
