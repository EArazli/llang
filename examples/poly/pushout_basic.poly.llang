polydoctrine Base where {
  mode M;
  type A @M;
  gen f : [A] -> [A] @M;
}

polydoctrine Left extends Base where {
  gen g : [A] -> [A] @M;
  gen extra : [A] -> [A] @M;
}

polydoctrine Right extends Base where {
  gen g : [A] -> [A] @M;
  gen extra : [A] -> [A] @M;
}

polydoctrine Both = pushout Left.fromBase Right.fromBase;
