import "./nat_bool_plus.poly.llang";
import "./nat_bool.models.llang";

polymodel NatBoolPlusNative : NatBoolPlus where {
  default = symbolic;

  op dup(x) = [x, x];
  op drop(x) = [];
  op swap(x,y) = [y, x];

  op Nat_inl_Z() = 0;
  op Nat_inl_S(n) = n + 1;
  op Nat_inl_add(a,b) = a + b;

  op Bool_inr_T() = true;
  op Bool_inr_F() = false;
  op Bool_inr_if(c,x,y) = if c then x else y;

  op isZero(n) = (n == 0);
}
